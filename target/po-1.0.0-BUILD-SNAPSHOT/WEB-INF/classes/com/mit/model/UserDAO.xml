<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.mit.model.UserDAO">
	<select id="getUserById" resultType="com.mit.model.UserDTO">
		SELECT userid AS username, userpw AS password, authority FROM user_tbl WHERE userid=#{userid}
	</select>
</mapper>