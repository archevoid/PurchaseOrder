<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.mit.model.UserDAO">
	<resultMap type="com.mit.model.UserDTO" id="userMap">
		<id property="username" column="userID" />
		<result property="password" column="userpw" />
		<collection property="authList" resultMap="authMap">
		</collection>
	</resultMap>
	
	<resultMap type="com.mit.model.AuthVO" id="authMap">
		<result property="username" column="userID" />
		<result property="auth" column="authority" />
	</resultMap>

	<select id="getUserById" resultMap="userMap">
		SELECT userid, userpw, authority FROM user_tbl WHERE userid=#{userid}
	</select>
</mapper>